@page
@model TakeAwayExample2.Pages.Admin.MenuItem.IndexModel

@using TakeAwayExample2.Utility

@if (User.IsInRole(SD.ManagerRole))
{

    <div class="border container custom-container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary align-middle">Menu Item List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-page="Upsert" class="btn btn-primary">
                    <i class="fas fa-plus"></i> &nbsp; Create New
                </a>
            </div>
        </div>

        <br />

        <div class="table-responsive">
            <table id="DT_load" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Food Type</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>

    </div>

}
else
{
    <div>
        <h1 class="text-danger">Access Denied!</h1>
    </div>
}

@section Scripts{
    <script src="~/js/menuItem.js"></script>
}