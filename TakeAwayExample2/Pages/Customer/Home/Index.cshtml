@page
@model TakeAwayExample2.Pages.Customer.Home.IndexModel
@{
}

<div class="row">

    @foreach (var category in Model.CategoryList)
    {
        @if (Model.MenuItemList.Where(c => c.CategoryID == category.CategoryID).Count() > 0)
        {
            <div class="row container">
                <div class="col-12">
                    <div class="row">
                        <h2 class="pl-1">@category.CategoryName</h2>

                        <div class="col-12">
                            <div class="row my-3">
                                @foreach (var menuItem in Model.MenuItemList.Where(c => c.CategoryID == category.CategoryID))
                                {
                                    <div class=" col-lg-3 col-xl-3 col-md-6">
                                        <div class="card custom-card-style">
                                            <div class="pl-3 pt-1">
                                                <h3 class="card-title text-primary">@menuItem.MenuItemName</h3>
                                            </div>
                                            <div class="d-flex justify-content-between form-control" style="border: 0px;">
                                                <div class="col-6 badge">@menuItem.Category.CategoryName</div>
                                                <div class="col-6 h6">$@menuItem.MenuItemPrice</div>
                                            </div>
                                            <img src="@menuItem.MenuItemImage" class="card-img p-2" />
                                            <a asp-page="Details" class="btn btn-dark text-white" asp-route-id="@menuItem.MenuItemID">Details</a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    }

</div>